extends ../layout

block content
    h1 Add New Product
    form(action="/products/add",method="post" enctype="multipart/form-data")
        .form-group
            label(for="prImage") Product Image
            input#prImage(type="file", class="form-control", name="prImage" required)
        .form-group
            label(for="prName") Product Name
            input#prName(type="text", class="form-control", name="prName" required)
        .form-group
            label(for="prCategory") Product Category
            input#prCategory(type="text", class="form-control", name="prCategory" required)
        .form-group
            label(for="prPrice") Product Price(Rs)
            input#prPrice(type="number", class="form-control", name="prPrice" required)
        .form-group
            label(for="prDetails") Product Details
            input#prDetails(type="text", class="form-control", name="prDetails" required)
        input(type="submit", class="btn btn-info")
    
